@model RWAMovies.ViewModels.VMVideo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IDVideo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IDVideo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UrlImage)
        </dt>
        <dd class="col-sm-10">
            <img class="img-thumbnail img-fluid w-25 w-25" src="@Model.UrlImage">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StreamingUrl)
        </dt>
        <dd class = "col-sm-10">
            <iframe class="card-body d-flex flex-column align-items-center justify-content-center text-center" style=" background-color: black" src="@Model.StreamingUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            @*@Html.DisplayFor(model => model.StreamingUrl)*@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoGenres)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var genre in Model.VideoGenres)
            {
                <div id="genre">@genre.Genre.Name</div>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoTags)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var tag in Model.VideoTags)
            {
                <div id ="tag">@tag.Tag.Name</div>
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.IDVideo }) |
    <a asp-action="Index">Back to List</a>
</div>
