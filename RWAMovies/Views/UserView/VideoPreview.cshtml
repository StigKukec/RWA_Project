@model VMVideo
@{
    ViewData["Title"] = "VideoPreview";
}
<link rel="stylesheet" src="~/css/UserProfile.css" />
<div class="container">
    <div class="main-body">

        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>

        <div class="row gutters-sm">
            <div class="col-md-6 mb-4">
                <div class="card mb-3">
                    <iframe class="card-body d-flex flex-column align-items-center justify-content-center text-center" style="height: 400px; background-color: black" src="@Model.StreamingUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    <!--
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center" style="height: 400px; background-color: black">
                        <div class="btn btn-outline-light" style="font-weight: bolder">
                            Play
                        </div>
                    </div>
                    -->
                </div>
                <div class="col-md">
                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">More details</i></h6>
                                    <small>Genre</small>
                                    <div class="mb-3">
                                        <div>
                                            @{
                                                if (Model.VideoGenres.Count.Equals(0))
                                                {
                                                    @:There are no genres for this video
                                                }
                                                else
                                                {
                                                    @foreach (var genre in Model.VideoGenres)
                                                    {
                                                        <a class="btn btn-outline-info">@genre.Genre.Name</a>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                    <small>Total time</small>
                                    <div class="mb-3" style="height: 5px">
                                        <div>@Model.TotalTime</div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Tags</i></h6>
                                    <div class="mb-3">
                                        <div>
                                            @{
                                                if (Model.VideoTags.Count.Equals(0))
                                                {
                                                    @:There are no tags for this video
                                                }
                                                else
                                                {
                                                    @foreach (var tag in Model.VideoTags)
                                                    {
                                                        <a class="btn btn-outline-info">@tag.Tag.Name</a>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card mb-3">
                    <div class="card-body" style="background-color: black">
                        <img src="@Model.UrlImage" alt="Movie poster" class="img-thumbnail img-fluid">
                    </div>
                </div>
                <div class="row gutters-sm">
                    <div class="col-sm mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Description</i></h6>
                                <div>
                                    <div>@Model.Description</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>